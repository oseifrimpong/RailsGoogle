<!DOCTYPE html>

<%= stylesheet_link_tag    "application" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>


<div id="global-alers">
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>

<%= yield %>

<div id="global-footer">
  <span class="small-print"><%= link_to('Log out', login_logout_path) %></span>
</div>
